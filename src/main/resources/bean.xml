<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
<!--  调用无参默认构造函数 id+class  -->
    <bean id="service" class="com.henashi.service.AccountServiceImplement"></bean>
    <bean id="dao" class="com.henashi.dao.AccountDaoImpl">
        <property name="test" value="TEST"></property>
        <property name="date" ref="date"></property>
        <property name="list">
            <list>
                <value>今</value>
                <value>天</value>
                <value>是</value>
                <value>个</value>
                <value>好</value>
                <value>日</value>
                <value>子</value>
            </list>
        </property>
    </bean>
<!--  第二种：spring调用工厂静态方法创建 id+class+"factory-method" -->
<!--  第三种：spring调用工厂实例创建 一个工厂bean+id+class+factory-bean+factory-method -->
<!--  还有scope属性表示单多例，init-method,destroy-method  -->
    <bean id="date" class="java.util.Date"></bean>
</beans>